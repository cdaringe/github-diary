{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build && next export && cp public/diary.json out/diary.json",
    "deploy": "run-s build scp",
    "eject": "next eject",
    "format": "prettier 'src/**/*.{js,ts,tsx}' --write",
    "scp": "bash deploy-scp.sh",
    "dev": "next dev",
    "test": "next test --env=jsdom"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "classnames": "^2.2.6",
    "d3": "^5.7.0",
    "dom-to-image": "^2.6.0",
    "lodash": "^4.17.11",
    "react-json-tree": "^0.11.0",
    "react-magic-dropzone": "^1.0.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/classnames": "^2.2.6",
    "@types/d3": "^5.0.0",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.116",
    "@types/node": "^20.0.0",
    "@types/react": "^17.0.70",
    "@types/react-dom": "^17.0.11",
    "husky": "^1.0.1",
    "lint-staged": "^7.1.0",
    "next": "13.5.6",
    "npm-run-all": "^4.1.3",
    "prettier": "2.4.1",
    "react": "^18",
    "react-dom": "^18",
    "typescript": "^5"
  },
  "browserslist": [
    ">0.25%",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
